@model CreateAnnouncementViewModel

@{
    ViewData["Title"] = "Create Announcement";
    ViewData["BodyClass"] = "leave-page";
}

<main class="p-4 flex-grow-1 bg-light">
    <div class="container-fluid px-4 py-4">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Notices", "Announcement")">Announcement</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create Announcement</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold">Create Announcement</h3>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">@TempData["ErrorMessage"]</div>
                }

                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control" data-val="true" data-val-noscripts="true" data-val-noscripts-message="Script tags are not allowed" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Message" class="form-label fw-semibold"></label>
                        <textarea asp-for="Message" class="form-control" rows="5" data-val="true" data-val-noscripts="true" data-val-noscripts-message="Script tags and potentially dangerous HTML are not allowed"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MessageType" class="form-label fw-semibold"></label>
                        <select asp-for="MessageType" class="form-select">
                            <option value="Policy">Policy</option>
                            <option value="Payroll">Payroll</option>
                            <option value="Holidays">Holidays</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ExpiryDate" class="form-label fw-semibold"></label>
                        <input asp-for="ExpiryDate" type="date" class="form-control" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"> </span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TargetType" class="form-label fw-semibold"></label>
                        <select asp-for="TargetType" class="form-select">
                            <option value="All">All Employees</option>
                            <optgroup label="Specific Department">
                                <option value="Human Resources">Human Resources</option>
                                <option value="Finance">Finance</option>
                                <option value="Information Technology">Information Technology</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Sales">Sales</option>
                                <option value="Operations">Operations</option>
                                <option value="Customer Support">Customer Support</option>
                            </optgroup>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="@Url.Action("Notices", "Announcement")" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to add this announcement?');">Create Announcement</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
