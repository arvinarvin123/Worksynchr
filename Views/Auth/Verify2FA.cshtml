@{
    ViewData["Title"] = "2FA Verification";
    ViewData["BodyClass"] = "leave-page"; // Reusing same layout class for consistent styling
    Layout = null;
}
@inject IConfiguration Configuration

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Human Resources & Payroll Transactions</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">





    <script src='https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.css' rel='stylesheet' />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script>
        mapboxgl.accessToken = '@Configuration["Mapbox:AccessToken"]';
    </script>

</head>

<body>



<main class="p-4 d-flex justify-content-center align-items-center vh-100 bg-light">

    <div class="card shadow-lg rounded-4 p-4" style="width: 100%; max-width: 420px;">
        <div class="card-body">

            <!-- Page Title -->
            <h3 class="fw-semibold text-center mb-3">Two-Factor Authentication</h3>
            <p class="text-muted text-center mb-4">
                Enter the 6-digit code sent to your registered phone number.
            </p>

            <!-- Error Message -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <!-- Verification Form -->
            <form asp-action="Verify2FA" method="post">
                <div class="mb-3">
                    <label for="code" class="form-label fw-medium">Verification Code</label>
                    <input type="text" name="code" id="code" class="form-control form-control-lg rounded-3" placeholder="Enter code" required />
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-semibold py-2 rounded-3">
                    Verify
                </button>
            </form>

            <!-- Optional: Resend or Go Back -->
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none small">
                    ← Back to login
                </a>
            </div>

        </div>
    </div>

	</main>
</body>
