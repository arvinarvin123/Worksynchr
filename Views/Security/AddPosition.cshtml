@model Position

@{
    ViewData["Title"] = "Add Position";
    ViewData["BodyClass"] = "leave-page"; // Shared styles
}

<main class="p-4 flex-grow-1 bg-light">
    <div class="container-fluid px-4 py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Position", "Security")">Positions</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Position</li>
            </ol>
        </nav>

        <!-- Title -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold">Add New Position</h3>
        </div>

        <div class="card">
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="AddPosition" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="PositionTitle" class="form-label">Position Title</label>
                        <input asp-for="PositionTitle" class="form-control" required maxlength="100" data-val="true" data-val-noscripts="true" data-val-noscripts-message="Script tags are not allowed" />
                        <span asp-validation-for="PositionTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JobDescription" class="form-label">Description</label>
                        <textarea asp-for="JobDescription" class="form-control" rows="3" data-val="true" data-val-noscripts="true" data-val-noscripts-message="Script tags and potentially dangerous HTML are not allowed"></textarea>
                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Position" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
